data "aws_iam_policy_document" "s3_access_policy" {
  count = local.enable_s3_access ? 1 : 0
  
  statement {
    effect = "Allow"
    actions = [
      "s3:PutObject",
      "s3:ListBucket"
    ]
    resources = [
      local.s3_bucket_arn,
      "${local.s3_bucket_arn}/*"
    ]
  }
}

