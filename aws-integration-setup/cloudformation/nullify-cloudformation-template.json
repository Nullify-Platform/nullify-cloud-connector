                  "ec2:TerminateInstances",
                  "ec2:StopInstances",
                  "ec2:StartInstances",
                  "ec2:RebootInstances",
                  "ec2:CreateSnapshot",
                  "ec2:DeleteSnapshot",
                  "ec2:CreateImage",
                  "ec2:DeregisterImage",
                  "logs:CreateLogStream",
                  "logs:PutLogEvents",
                  "logs:DeleteLogGroup",
                  "logs:DeleteLogStream"
                ],
                "Resource": "*",
                "Condition": {}
              }
            ]
          }
        }
      },
      "EKSValidationCheck": {
        "Type": "AWS::CloudFormation::WaitConditionHandle"
      },
      "IAMViewOnlyRole": {
        "Type": "AWS::IAM::Role",
        "Properties": {
          "AssumeRolePolicyDocument": {
            "Fn::If": [
              "ValidEKSConfig",
              {
                "Statement": [
                  {
                    "Action": "sts:AssumeRole",
                    "Condition": {
                      "StringEquals": {
                        "sts:ExternalId": {
                          "Ref": "ExternalID"
                        }
                      }
                    },
                    "Effect": "Allow",
                    "Principal": {
                      "AWS": {
                        "Ref": "CrossAccountRoleArn"
                      }
                    }
                  },
                  {
                    "Action": "sts:AssumeRoleWithWebIdentity",
                    "Condition": {
                      "StringLike": {
                        "*:sub": "system:serviceaccount:nullify:nullify-k8s-collector-sa"
                      }
                    },
                    "Effect": "Allow",
                    "Principal": {
                      "Federated": {
                        "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:oidc-provider/${EKSOidcProviderURL}"
                      }
                    }
                  }
                ],
                "Version": "2012-10-17"
              },
              {
                "Statement": [
                  {
                    "Action": "sts:AssumeRole",
                    "Condition": {
                      "StringEquals": {
                        "sts:ExternalId": {
                          "Ref": "ExternalID"
                        }
                      }
                    },
                    "Effect": "Allow",
                    "Principal": {
                      "AWS": {
                        "Ref": "CrossAccountRoleArn"
                      }
                    }
                  }
                ],
                "Version": "2012-10-17"
              }
            ]
          },
          "ManagedPolicyArns": {
            "Fn::If": [
              "EKSIntegrationEnabled",
              [
                {
                  "Ref": "ReadOnlyAccessPolicy"
                },
                {
                  "Ref": "ReadOnlyAccessPolicy2"
                },
                {
                  "Ref": "S3AccessPolicy"
                },
                {
                  "Ref": "DenyActionsPolicy"
                }
              ],
              [
                {
                  "Ref": "ReadOnlyAccessPolicy"
                },
                {
                  "Ref": "ReadOnlyAccessPolicy2"
                },
                {
                  "Ref": "DenyActionsPolicy"
                }
              ]
            ]
          },
          "RoleName": {
            "Fn::Sub": "AWSIntegration-${CustomerName}-NullifyReadOnlyRole"
          }
        }
      },
