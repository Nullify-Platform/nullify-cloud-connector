                  "s3:DeleteObject*",
                  "s3:RestoreObject",
                  "ecr:GetDownloadUrlForLayer",
                  "ecr:BatchGetImage",
                  "ecr:GetAuthorizationToken",
                  "ecr:PutImage",
                  "ecr:InitiateLayerUpload",
                  "ecr:UploadLayerPart",
                  "ecr:CompleteLayerUpload",
                  "secretsmanager:GetSecretValue",
                  "secretsmanager:DescribeSecret",
                  "ssm:GetParameter*",
                  "ssm:PutParameter*",
                  "ssm:DeleteParameter*",
                  "kms:Decrypt",
                  "kms:DescribeKey",
                  "kms:GenerateDataKey*",
                  "kms:CreateGrant",
                  "lambda:InvokeFunction",
                  "lambda:InvokeAsync",
                  "sts:AssumeRole",
                  "iam:PassRole",
                  "iam:CreateRole",
                  "iam:DeleteRole",
                  "iam:AttachRolePolicy",
                  "iam:DetachRolePolicy",
                  "iam:PutRolePolicy",
                  "iam:DeleteRolePolicy",
                  "iam:CreateUser",
                  "iam:DeleteUser",
                  "iam:CreateAccessKey",
                  "iam:DeleteAccessKey",
                  "iam:UpdateAccessKey",
